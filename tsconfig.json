{
    "compilerOptions": {
        "baseUrl": ".",
        "outDir": "./build/",
        "lib": ["dom", "es6", "dom.iterable", "scripthost"],
        "noImplicitAny": true,
        "sourceMap": true,
        "module": "ESNext",
        "target": "es5",
        "jsx": "preserve",
        "declaration": true,
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "paths": {
            "@/": ["./src"],
            "@/components": ["./src/components/*"],
            "@/utils": ["./src/utils"],
            "@/api": ["./src/api"],
            "@/asset": ["./src/asset"]
        }
    }
}
